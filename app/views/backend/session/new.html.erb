<body class="main">
    <% flash.each do |key, value| %>
     <%= content_tag(:div, class: "alert alert-#{key} alert-dismissable") do %>
      <%= value %>
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
     <% end %>
    <% end %>
    <%= render 'login' %>
</body>
