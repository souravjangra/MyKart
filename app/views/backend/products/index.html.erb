
<body class="container">

    <%= link_to "Back", backend_home_path, :class => "btn btn-primary btn-sm", :style=>'margin-top: 16px; margin-bottom: 12px'%>

    <div class="container">
        <h1>Products</h1>
        <table class="table">
            <tr>
            <th>SKU</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Image</th>
            <th>Update</th>
            <th>Delete</th>
            </tr>

            <% @products.each do |product| %>
            <tr>
                <td><%= product.sku %></td>
                <td><%= product.name %></td>
                <td><%= product.description %></td>
                <td><%= product.price %></td>
                <td><%= product.quantity %></td>
                <td><% if product.image %>
                    <%= image_tag(product.product_image, {:style => "width: 70px; height: 120px"})  %>
                <% end %></td>
                <td><%= link_to 'Edit', edit_backend_product_path(product) %></td>
                <td><%= link_to 'Delete', backend_product_path(product),
                 method: :delete,
                  data: { confirm: 'Are you sure? '}%></td>
            </tr>
            <% end %>

        </table>
    </div>
</body>
